{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "electron/dist",
    "removeComments": true,
    "rootDir": "electron/src",
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["electron/dist", "electron/renderer", "electron/**/*.test*.ts", "node_modules", "wrap"]
}
